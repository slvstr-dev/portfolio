{
  "name": "portfolio",
  "description": "Portfolio site created with Next.js, TypeScript & Tailwind.",
  "author": "Sylvester Hofstra <hello@slvstr.dev>",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --check \"**/*.{js,ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "check": "pnpm types && pnpm lint && pnpm format"
  },
  "dependencies": {
    "next": "13.4.12",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "20.4.3",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@2digits/eslint-config": "^0.7.2",
    "@2digits/prettier-config": "^0.9.3",
    "@2digits/tsconfig": "^0.2.1",
    "autoprefixer": "10.4.14",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "postcss": "8.4.27",
    "prettier": "^3.0.0",
    "tailwind-variants": "^0.1.13",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "packageManager": "pnpm@8.6.9"
